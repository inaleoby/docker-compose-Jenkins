pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = "tp"
    }

    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/utilisateur/mon-repo.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'docker compose build'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker compose up -d'
            }
        }
    }

    post {
        always {
            sh 'docker compose ps'
        }
    }
}

